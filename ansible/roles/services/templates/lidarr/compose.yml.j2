services:
  lidarr:
    image: lscr.io/linuxserver/lidarr:nightly
    container_name: lidarr
    networks:
      - media
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ timezone }}
      - DOCKER_MODS=linuxserver/mods:lidarr-flac2mp3
    volumes:
      - {{ paths.config }}/lidarr/data:/config
      - {{ paths.data }}:/data
    ports:
      - {{ service_ports.lidarr }}:8686
    restart: unless-stopped
    labels:
      caddy: lidarr.{{ internal_domain }}
      caddy.reverse_proxy: "{% raw %}{{upstreams 8686}}{% endraw %}"
      caddy.tls: internal

networks:
  media:
    external: true
