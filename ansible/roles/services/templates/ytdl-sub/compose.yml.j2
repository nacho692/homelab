services:
  ytdl-sub:
    image: ghcr.io/jmbannon/ytdl-sub-gui:latest
    container_name: ytdl-sub
    networks:
      - media
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ timezone }}
    volumes:
      - {{ paths.config }}/ytdl-sub/config:/config
      - {{ paths.media }}/yt_peliculas:/movies
    ports:
      - 8443:8443
    labels:
      caddy: ytdl-sub.{{ internal_domain }}
      caddy.reverse_proxy: "{% raw %}{{upstreams 8443}}{% endraw %}"
      caddy.tls: internal
    restart: unless-stopped

networks:
  media:
    external: true
