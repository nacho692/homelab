services:
  frigate:
    image: ghcr.io/blakeblackshear/frigate:stable
    container_name: frigate
    restart: unless-stopped
    networks:
      - internal
    ports:
      - "{{ service_ports.frigate }}:8971"
      - "8554:8554"
      - "8555:8555/tcp"
      - "8555:8555/udp"
    environment:
      - TZ={{ timezone }}
      - LIBVA_DRIVER_NAME=radeonsi
    group_add:
      - "{{ render_group }}"
    devices:
      - {{ gpu_device }}:/dev/dri/renderD128
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - {{ paths.config }}/frigate/config:/config
      - {{ paths.data }}/frigate:/media/frigate
      - type: tmpfs
        target: /tmp/cache
        tmpfs:
          size: 1000000000
    shm_size: "256mb"
    labels:
      caddy: frigate.{{ internal_domain }}
      caddy.reverse_proxy: "{% raw %}{{upstreams 8971}}{% endraw %}"
      caddy.tls: internal

networks:
  internal:
    external: true
